<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SpaDotNetCoreApp</title>

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css"
        asp-fallback-href="~/lib/twitter-bootstrap/css/bootstrap.min.css"
        asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute"
        crossorigin="anonymous"
        integrity="sha512-rO2SXEKBSICa/AfyhEK5ZqWFCOok1rcgPYfGOqtX35OyiraBg6Xa4NnBJwXgpIRoXeWjcAmcQniMhp22htDc6g==" />

    <link rel="stylesheet" href="~/css/site.min.css" />
    @await RenderSectionAsync("Head", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Reload</a>
            </div>
        </nav>
    </header>
    <main class="container-fluid row">
        <div class="">
            <partial name="_Navigation" />
        </div>
        <div class="col">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - SpaDotNetCoreApp - <a href="#/privacy">Privacy</a>
        </div>
    </footer>

    <environment exclude="Development">
        <script src="~/app.min.js" asp-append-version="true"></script>
    </environment>
    <environment include="Development">
        <script src="~/app.js" asp-append-version="true"></script>
    </environment>
    @await RenderSectionAsync("Bottom", required: false)
</body>
</html>
